@model NWVDNUG.Entities.Meeting[]
@{
    ViewBag.Title = "Upcoming Meetings";
}
<h2>Upcoming Meetings</h2>

<table class="zebra-striped">
    <tr>
        <th>Date<br />(Click for more information)</th>
        <th>Presenter</th>
        <th>Notes</th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td class="span3"><a href="@Url.Action("Details",new {id=item.Id})">@item.StartDateTime</a></td>
        <td class="span2"><a href="@item.SpeakerBioLink" target="_blank" >@item.SpeakerName</a></td>
        <td class="span6">@item.Notes</td>
    </tr>

